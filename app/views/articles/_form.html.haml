.form
  .article
    .card
      .card-content.card-content-form
        = form_for [article],html: {class: 'form__box'} do |f|
          = f.text_field :title, placeholder: 'type a title',class:"title-area"
          = f.text_area :content, placeholder: 'type a content',class:"materialize-textarea"
          = f.file_field :image,class:'form__box__input__img'
          = f.submit 'Send', class: 'form__box__submit'